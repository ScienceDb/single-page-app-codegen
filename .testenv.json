{
  "cwd": "./test/integration_test_env",
  "docker": "../integration_test_misc/docker-compose-test.yml",
  "env": {
    "NODE_JQ_SKIP_INSTALL_BINARY": true
  },
  "services": [
    {
      "name": "gql_science_db_graphql_server1",
      "template": "gql",
      "codegen": "gql-codegen",
      "url": "http://localhost:3000/graphql"
    },
    {
      "name": "gql_science_db_graphql_server2",
      "template": "gql",
      "codegen": "gql-codegen",
      "url": "http://localhost:3030/graphql"
    },
    {
      "name": "spa_science_db_app_server1",
      "template": "spa",
      "codegen": "spa-codegen",
      "url": "http://localhost:8080/graphql"
    },
    {
      "name": "spa_science_db_app_server2",
      "template": "spa",
      "codegen": "spa-codegen",
      "url": "http://localhost:8081/graphql"
    }
  ],
  "models": [
    {
      "opts": [ "--migrations" ],
      "path": "../integration_test_models_instance1",
      "target": [ "gql_science_db_graphql_server1" ]
    },
    {
      "opts": [ "--migrations" ],
      "path": "../integration_test_models_instance2",
      "target": [ "gql_science_db_graphql_server2" ]
    },
    {
      "opts": [ "-P", "-D" ],
      "path": "../integration_test_models_instance1",
      "target": [ "spa_science_db_app_server1" ]
    },
    {
      "opts": [ "-P", "-D" ],
      "path": "../integration_test_models_instance2",
      "target": [ "spa_science_db_app_server2" ]
    }
  ],
  "patches": [
    {
      "opts": [],
      "src": "../../test/patches/with_validations.js.patch",
      "dest": "gql_science_db_graphql_server1/validations/with_validations.js"
    },
    {
      "opts": [],
      "src": "../../test/patches/acl_rules.js.patch",
      "dest": "spa_science_db_app_server1/src/acl_rules.js"
    },
    {
      "opts": [],
      "src": "../../test/patches/migrateDbAndStartServer.patch",
      "dest": "gql_science_db_graphql_server1/migrateDbAndStartServer.sh"
    },
    {
      "opts": [],
      "src": "../../test/patches/migrateDbAndStartServer.patch",
      "dest": "gql_science_db_graphql_server2/migrateDbAndStartServer.sh"
    }
  ],
  "templates": [
    {
      "name": "gql",
      "branch": "master",
      "url": "https://github.com/Zendro-dev/graphql-server.git"
    },
    {
      "name": "gql-codegen",
      "branch": "master",
      "url": "https://github.com/Zendro-dev/graphql-server-model-codegen.git"
    },
    {
      "name": "spa",
      "branch": "master",
      "url": "https://github.com/Zendro-dev/single-page-app.git"
    },
    {
      "name": "spa-codegen",
      "branch": "master",
      "url": "../../.git",
      "source": true
    }
  ],
  "tests": [
    {
      "name": "integration",
      "runner": "mocha",
      "target": "spa-codegen/test/integration-tests-mocha.js"
    }
  ]
}
